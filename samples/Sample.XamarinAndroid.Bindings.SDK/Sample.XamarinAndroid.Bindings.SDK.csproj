<Project Sdk="Microsoft.NET.Sdk">
  <!--
  https://montemagno.com/converting-xamarin-libraries-to-sdk-style-multi-targeted-projects/
    
  -->
    <PropertyGroup>
        <AssemblyName>Sample.XamarinAndroid.Bindings.SDK</AssemblyName>

        <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
        <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
        <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
        <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
        <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>

        <TargetFrameworks>MonoAndroid81</TargetFrameworks>
        <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
         
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>        
    </PropertyGroup>

    <PropertyGroup>
        <IsBindingProject>true</IsBindingProject>
        <AndroidClassParser>class-parse</AndroidClassParser>
    </PropertyGroup>

    <PropertyGroup>
        <!-- 
        nuget packaging
        -->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Sample.XamarinAndroid.Bindings.SDK</PackageId>
        <PackageVersion>1.14.0</PackageVersion>
        <Title>Sample.XamarinAndroid.Bindings.SDK</Title>
        <Summary>
            Tools for bindings for Xamarin
        </Summary>
        <Description>
            Tools for bindings for Xamarin
        </Description>
        <Owners>HolisticWare</Owners>
        <Authors>HolisticWare</Authors>
        <PackageLicenseUrl>
        </PackageLicenseUrl>
        <PackageProjectUrl>
        </PackageProjectUrl>
        <RepositoryUrl>
        </RepositoryUrl>
        <PackageReleaseNotes>
            Initial bindings
        </PackageReleaseNotes>
        <PackageIconUrl>
            
        </PackageIconUrl>
        <PackageTags>xamarin, android, bindings, tools</PackageTags>
    </PropertyGroup>


    <ItemGroup>
        <!--
        -->
        <TransformFile Include="Transforms\*.xml" />
    </ItemGroup>

  <ItemGroup>
    <!--
    <ProjectReference Include="..\things\Xamarin.Android.Things.csproj" />
    -->
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.4.0" PrivateAssets="All" />
    <PackageReference Include="HolisticWare.Xamarin.Tools.Bindings.XamarinAndroid.Intellisense" Version="0.0.1-alpha-20180817212755" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Additions\" />
    <Folder Include="Jars\" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Jars\AboutJars.txt" />
    <None Remove="hw-generated\api.xml" />
    <None Remove="hwolisticware-generated\api.xml" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\externals\android\grpc-protobuf-lite-1.14.0.jar">
      <Link>Jars\grpc-protobuf-lite-1.14.0.jar</Link>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="hwolisticware-generated\IO.Grpc.Stub.Annotations.IRpcMethod.cs" />
    <Compile Remove="hwolisticware-generated\IO.Grpc.Stub.Annotations.RpcMethodAttribute.cs" />
    <Compile Remove="hwolisticware-generated\__NamespaceMapping__.cs" />
  </ItemGroup>
  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />


    <Target Name="Dump" AfterTargets="Build">

        <Message Text="mc++ %S(TargetFramework)" Importance="high"></Message>
    </Target>

</Project>